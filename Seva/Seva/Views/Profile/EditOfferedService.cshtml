@model Seva.ViewModels.EditOfferedServiceViewModel

@{
    ViewData["Title"] = "Edit offered service";
}

<h1>Edit service</h1>

<hr class="hr"/>
<div class="row" style="box-shadow: 0px 0px 50px 10px black; padding: 3%">
    <div class="col-md-4">
        <form asp-action="EditOfferedService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option>Select a category</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var category in ViewBag.Categories)
                         {
                             <option>@category</option>
                         }
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryTimeDays" class="control-label"></label>
                <input asp-for="DeliveryTimeDays" class="form-control" />
                <span asp-validation-for="DeliveryTimeDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryTimeHours" class="control-label"></label>
                <input asp-for="DeliveryTimeHours" class="form-control" />
                <span asp-validation-for="DeliveryTimeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="editOfferedServiceBtn" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
